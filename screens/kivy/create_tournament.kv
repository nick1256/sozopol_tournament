#:import datetime datetime.datetime

<CreateTournamentScreen>:
	
	GridLayout:
		rows:3
		cols:1
		
		Label:
			text: "Creating New Tournament (Step 1/4)"
			size_hint_y : 0.2

		GridLayout:
			size_hint_y : 0.6
			rows: 5
			cols: 2
			padding: 10
			spacing: 20
			
			Label:
				text : "Number of Teams (6-7):"
		
			TextInput:
				id: nteams1
				text: "17"
				write_tab: False
				size_hint_y : None
				height: '32dp'

			Label:
				text : "Number of Teams (8-9):"
		
			TextInput:
				id: nteams2
				text: "16"
				write_tab: False
				size_hint_y : None
				height: '32dp'

			Label:
				text : "Number of Teams (10-12):"
		
			TextInput:
				id: nteams3
				text: "8"
				write_tab: False
				size_hint_y : None
				height: '32dp'
	

			Label:
				text : "Number of Rounds:"

			TextInput:
				id: nrounds
				text : '5'
				write_tab: False
				size_hint_y : None
				height: '32dp'

			Label:
				text : "Name of tournament:"	
			
			TextInput:
				id: tname
				write_tab: False
				text : 'Sozopol_'+str(datetime.now().year)
				hint_text_color: [0,0,0,1]				
				size_hint_y : None
				height: '32dp'
	
		GridLayout:
			size_hint_y : 0.2
			cols: 2
			padding: 10
			spacing: 10
			
			Button:
				background_color: [1,0,0,1]
				text: "Back"
				on_press: root.screen_manager.set("start")	
			Button:
				background_color: [0,0,1,1]
				text: "Continue"
				on_press: root.get_info(nteams1.text,nteams2.text,nteams3.text,nrounds.text,tname.text)






