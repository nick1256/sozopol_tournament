#:import datetime datetime.datetime

<CreateTournamentScreen>:
	
	GridLayout:
		rows:3
		cols:1
		
		Label:
			text: "Creating New Tournament (1/2)"
			size_hint_y : 0.2

		GridLayout:
			size_hint_y : 0.6
			rows: 6
			padding: 10
			spacing: 20
			
			Label:
				text : "Number of Teams:"
		
			TextInput:
				id: nteams
				size_hint_y : None
				hint_text : '10'
				height: '32dp'

			Label:
				text : "Number of Rounds:"

			TextInput:
				id: nrounds
				hint_text : '5'
				hint_text_color: [0,0,0,1]				
				size_hint_y : None
				height: '32dp'

			Label:
				text : "Name of tournament:"	
			
			TextInput:
				id: tname
				hint_text : 'Sozopol_'+str(datetime.now().year)
				hint_text_color: [0,0,0,1]				
				size_hint_y : None
				height: '32dp'
	
		GridLayout:
			size_hint_y : 0.2
			cols: 2
			padding: 10
			spacing: 10
			
			Button:
				background_color: [1,0,0,1]
				text: "Back"
				on_press: root.screen_manager.set("start")	
			Button:
				background_color: [0,0,1,1]
				text: "Continue"
				on_press: root.get_info(nteams.text,nrounds.text,tname.text)






